# Bedrock Cost Keeper - Environment Configuration Example
# Copy this file to .env and update with your values

# Service Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# DynamoDB Configuration
DYNAMODB_CONFIG_TABLE=bedrock-cost-keeper-config-dev
DYNAMODB_STICKY_STATE_TABLE=bedrock-cost-keeper-sticky-state-dev
DYNAMODB_USAGE_AGG_SHARDED_TABLE=bedrock-cost-keeper-usage-agg-sharded-dev
DYNAMODB_DAILY_TOTAL_TABLE=bedrock-cost-keeper-daily-total-dev
DYNAMODB_PRICING_CACHE_TABLE=bedrock-cost-keeper-pricing-cache-dev
DYNAMODB_TOKENS_TABLE=bedrock-cost-keeper-tokens-dev
DYNAMODB_SECRETS_TABLE=bedrock-cost-keeper-secrets-dev

# For local testing with DynamoDB Local
# DYNAMODB_ENDPOINT=http://localhost:8000

# Authentication
JWT_SECRET_KEY=your-base64-encoded-jwt-secret-key-here
PROVISIONING_API_KEY=your-base64-encoded-provisioning-api-key-here

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Aggregator Configuration
AGGREGATOR_ENABLED=true
AGGREGATOR_INTERVAL_SECS=60

# Pricing Refresh Configuration
PRICING_REFRESH_ENABLED=true
PRICING_REFRESH_INTERVAL_SECS=86400

# Application Configuration
APP_NAME=bedrock-cost-keeper
APP_VERSION=1.0.0
